<div class="add_top_padding card .card-group", style="margin: 40px 90px 90px 90px">
  <div class="card-title"><h1 class="add_top_padding add_left_padding font-weight-bold">Pins List</h1></div>
  <div class="card-body">
      <% i = 0 %>
      <% while i < @pins.length %>
          <div id="pins", class="d-inline flex-p-2">
            <% pin = @pins[i] %>
            <%= link_to (image_tag pin.thumbnail, style: 'margin-bottom: 5px;'), pin %>
          </div>
        <% i += 1 %>
      <% end %>
    </div>
  </div>

  <div class="card-footer">
    <%= link_to "New pin", new_pin_path, class: 'btn btn-primary' %> 
  </div>
</div>

