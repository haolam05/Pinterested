<h2 class="center">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field col add_bottom_padding">
    <%= f.label :password, "New password" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control form-control-sm' %>
  </div>

  <div class="field col add_bottom_padding">
    <%= f.label :password_confirmation, "Confirm new password" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-sm' %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: 'btn btn-primary', style: 'margin-bottom: 5px; margin-left: 10px;' %>
    <div style="margin-left: 10px;"><%= render "devise/shared/links" %></div>
  </div>
<% end %>

