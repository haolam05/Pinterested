<div class="jumbotron center" style="padding: 20px 0px 15px 30px;" style="display: flex;">
  <h1 class="display-4">Welcome To My Pinterested App!</h1>
  <p class="lead">Pretty cool, don't you think?</p>

  <div style="align-self: flex-end;">
    <% if !user_signed_in? %>
	    <%= link_to 'Join', new_user_registration_path, class: 'btn btn-primary' %>
	    <%= link_to 'Login', new_user_session_path, class: 'btn btn-outline-info' %>
    <% else %>
      <strong><i>Welcome!<i></strong><br>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-primary' %>
      <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-outline-info' %>
      <%= link_to 'List Pins', pins_path, class: 'btn btn-outline-info' %>
    <% end %>
  <div>
</div>
